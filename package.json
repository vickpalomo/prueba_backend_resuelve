{
  "name": "prueba_backend_resuelve",
  "version": "1.0.0",
  "description": "API para resolver el reto backend de Resuelve",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon",
    "eslint": "eslint *.js controllers/*.js m*/*.js routes/*.*js",
    "prepare": "husky install",
    "test": "NODE_ENV=test jest --coverage --verbose",
    "start:prod": "node index.js"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:vickpalomo/prueba_backend_resuelve.git"
  },
  "keywords": [
    "express",
    "husky",
    "eslint"
  ],
  "author": "Victor Palomo",
  "license": "ISC",
  "devDependencies": {
    "eslint": "^7.27.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.23.3",
    "eslint-plugin-jest": "^24.4.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^6.0.0",
    "jest": "^27.0.6",
    "jest-sonar-reporter": "^2.0.0",
    "nodemon": "^2.0.4",
    "sonarqube-scanner": "^2.8.1",
    "standard": "^14.3.3",
    "supertest": "^6.1.4"
  },
  "dependencies": {
    "ajv": "^8.6.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^4.2.0",
    "morgan": "^1.10.0",
    "swagger-jsdoc": "^4.0.0",
    "swagger-ui-express": "^4.1.4"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "testResultsProcessor": "jest-sonar-reporter"
  },
  "jestSonar": {
    "reportPath": "coverage",
    "reportFile": "test-reporter.xml",
    "indent": 2
  },
  "nodemonConfig": {
    "restartable": "rs",
    "ignore": [
      ".git*",
      "node_modules/**/node_modules",
      "wait-for-it.sh",
      ".env*",
      "docker-compose*.yml",
      "Dockerfile",
      ".dockerignore"
    ],
    "ext": "js,json",
    "verbose": false,
    "execMap": {
      "js": "node --harmony"
    }
  },
  "standard": {
    "env": [
      "jest"
    ]
  }
}
